<h3>Search employee</h3>

<form class="form-horizontal" >
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Enter employee name</label>
    <div class="col-md-5">
      {{input value=eName class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-md-2 control-label">Enter employee dept</label>
    <div class="col-md-5">
      {{input value=eDept class="form-control"}}
    </div>
  </div>






  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
     <button class="btn btn-primary" {{action 'searchEmpRec'}} >Search employees</button>
 </div></div>
</form>
<br>

<table border="0" width=500 >
  <tr height=35>
    <th>EID</th>
    <th>Name</th>
    <th>Dept</th>
    <th>Operations</th>
  </tr>
{{#each searchrec as |searchrec|}}
  <tr height=20>
    <td>{{searchrec.eid}}</td> <td> {{searchrec.ename}} </td> <td>{{searchrec.edept}}</td><td>here ops</td>
  </tr>
  {{else}}
    Not updated into template VIEW
{{/each}}
</table>
